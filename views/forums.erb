<%# if env["warden"].authenticated? %>
  <p class="top-right-nav"><%# link_to I18n.t("topics.mark_all_as_read"), url(:users, :all_read, env["warden"].user.nickname) + "?authenticity_token=#{session[:csrf]}", :method => :post, :class => "button-normal" %></p>
<%# end %>
<h1><%= t.general.forum_overview %></h1>

<% @forum_groups.each_pair do |groupname, forums| %>
  <div class="forumgroup">
    <p class="forumgroupname"><%= groupname %></p>

    <table class="forumlist">
      <thead>
	<tr>
	  <th class="forumicon imgcell"></th>
	  <th class="forumname"><%= t.forums.forum %></th>
	  <th class="forumtopics numbercell"><%= t.forums.topics %></th>
	  <th class="forumposts numbercell"><%= t.forums.posts %></th>
	  <th class="forumlastpost"><%= t.forums.lastpost %></th>
	</tr>
      </thead>
      <tbody>
	<% forums.each do |options| %>
	  <%= erb :_list_forum, :locals => {:forum_options => options} %>
	<% end %>
      </tbody>
    </table>
  </div>
<% end %>
