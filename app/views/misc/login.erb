<h1><%= I18n.t("general.log_in") %></h1>

<% form_tag "/login", :method => :post do %>
<p>
  <%= I18n.t("general.nickname") %><br/>
  <%= text_field_tag :nickname %>
</p>

<p>
  <%= I18n.t("general.password") %><br/>
  <%= password_field_tag :password %>
</p>

<p class="submit-separator">
  <%= submit_tag I18n.t("general.log_in"), :class => "button-ok" %>
  <%= link_to I18n.t("users.forgotpw.forgot"), url(:users, :forgotpw) %>
</p>

<% end %>
