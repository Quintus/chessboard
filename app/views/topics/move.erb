<h1><%= I18n.t("topics.move") %></h1>

<% unless @topic.errors.empty? %>
<div class="flash alert">
  <p><%= I18n.t("general.errors_occured") %></p>
  <ul>
    <% @topic.errors.messages.each do |key, msg| %>
      <li><%= key %>: <%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<% form_for @topic, url(:topics, :move, @topic.id), :method => :patch do |f| %>
  <p>
    <%= I18n.t("topics.move_target") %>:<br/>
    <%= f.select :forum_id, :options => Forum.order(:name => :asc).map{|forum| [forum.name, forum.id]} %>
  </p>

  <p class="submit-separator">
    <%= f.submit I18n.t("topics.move"), :class => "button-ok" %>
  </p>
<% end %>
