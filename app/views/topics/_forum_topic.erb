<tr class="forum-topic">
  <td class="list-topic">
    <%= link_to forum_topic.title, url(:topics, :show, forum_topic.id) %><br/>
    <%= I18n.t("forums.author_by") %> <%= link_to forum_topic.author.nickname, "/" %>
  </td>
  <td class="list-replies numbercell"><%= forum_topic.posts.count %></td>
  <td class="list-views numbercell"><%= forum_topic.views %></td>
  <td class="forumlastpost">
    <% post = forum_topic.posts.order("created_at DESC").first %>
    <%= format_time post.created_at %><br/>
    <%= I18n.t("forums.author_by") %> <%= link_to post.author.nickname, "/" %>
  </td>
</tr>
