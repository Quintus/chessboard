<tr class="forum">
  <td class="forumname">
    <%= link_to list_forum.name, url(:forums, :show, list_forum.id) %><br/>
    <%= list_forum.description %>
  </td>
  <td class="forumtopics">
    <%= list_forum.topics.count %>
  </td>
  <td class="forumposts">
    <%= list_forum.topics.joins(:posts).count %>
  </td>
  <td class="forumlastpost">
    <% post = list_forum.topics.joins(:posts).order(:created_at => :desc).first %>
    <%= post.created_at.strftime("%Y-%m-%d %H:%M") %><br/>
    by <%= link_to post.author.nickname, "/" %>
  </td>
</tr>
