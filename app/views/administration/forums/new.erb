<% content_for :sidebar do %>
  <%= partial "administration/sidebar" %>
<% end %>

<h1><%= I18n.t("admin.forums.new") %></h1>

<% form_for @forum, url(:administration, :create_forum) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :forum_group %>
    <%= f.select :forum_group, :collection => ForumGroup.order(:name => :asc), :fields => [:name, :id] %>
  </p>

  <p class="submit-separator">
    <%= submit_tag I18n.t("general.create"), :class => "button-ok" %>
  </p>
<% end %>
