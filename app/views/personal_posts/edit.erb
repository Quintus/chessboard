<% content_for :sidebar do %>
  <%= partial "misc/personal_sidebar" %>
<% end %>

<h1><%= I18n.t("pms.edit_post") %></h1>

<% unless @post.errors.empty? %>
<div class="flash alert">
  <p><%= I18n.t("general.errors_occured") %></p>
  <ul>
    <% @post.errors.messages.each do |key, msg| %>
      <li><%= key %>: <%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<% form_for @post, url(:personal_posts, :update, @post.personal_message.id, @post.id), :method => :patch do |f| %>
  <%= partial "personal_posts/form_fields", :locals => {:form => f, :post => @post} %>

  <p class="submit-separator">
    <%= f.submit I18n.t("general.update"), :class => "button-ok" %>
    <%= button_tag I18n.t("general.preview"), :class => "button-normal", :id => "preview-button" %>
  </p>
<% end %>

<div class="preview"></div>
