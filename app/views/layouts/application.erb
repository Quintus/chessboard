<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title><%= make_pagetitle(@pagetitle) %></title>
    <%= stylesheet_link_tag "main" %>
    <%= javascript_include_tag "jquery", "jquery-ujs", "insert_at_caret", "usersearch", "preview", "hide_codelines" %>
    <%= feed_tag :atom, url(:topics, :feed, :format => :atom), :title => "Atom feed" %>
    <%= call_hook(:html_header) %>
  </head>
  <body>
    <%= partial "layouts/header" %>
    <%= partial "layouts/navigation" %>

    <div id="login-info">
      <% if env["warden"].authenticated? %>
	<%= I18n.t("general.logged_in", :nick => env["warden"].user.nickname) %>
      <% else %>
	<%= I18n.t("general.not_logged_in") %>
      <% end %>
    </div>

    <% if content_for?(:sidebar) %>
      <div id="sidebar">
	<%= yield_content(:sidebar) %>
      </div>
    <% end %>

    <% if content_for?(:sidebar) %>
    <div id="content" class="with-sidebar">
    <% else %>
    <div id="content">
    <% end %>
      <%= flash_tag :alert, :class => "flash alert" %>
      <%= flash_tag :notice, :class => "flash notice" %>

      <%= yield %>

      <%= partial "layouts/footer" %>
    </div>

  </body>
</html>
