<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title><%= @pagetitle || "Chessboard" %></title>
    <%= stylesheet_link_tag "main" %>
    <%= javascript_include_tag "jquery", "jquery-ujs", "handlebars", "quickreply" %>
  </head>
  <body>
    <%= partial "layouts/header" %>
    <%= partial "layouts/navigation" %>

    <div id="login-info">
      <% if env["warden"].authenticated? %>
	<%= I18n.t("general.logged_in", :nick => env["warden"].user.nickname) %>
      <% else %>
	<%= I18n.t("general.not_logged_in") %>
      <% end %>
    </div>

    <% if content_for?(:sidebar) %>
      <div id="sidebar">
	<%= yield_content(:sidebar) %>
      </div>
    <% end %>

    <% if content_for?(:sidebar) %>
    <div id="content" class="with-sidebar">
    <% else %>
    <div id="content">
    <% end %>
      <%= flash_tag :alert, :class => "flash alert" %>
      <%= flash_tag :notice, :class => "flash notice" %>

      <%= yield %>
    </div>

    <%= partial "layouts/footer" %>

  </body>
</html>
